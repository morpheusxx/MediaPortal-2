<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DependsOnStyleResources="Colors,Consts"
    >

  <!--
    Top main navigation ( Fira Sana OT, Light, 36 )
    Media Items List view Main ( Fira Sana OT, Regular, 28 ) 
    Sub text ( genre etc ) ( Fira Sana OT, Regular, 22 )
    Movie / Series details:
      Header ( Fira Sana OT, Regular, 30 ) 
      Normal ( Fira Sana OT, Light, 27 )
  -->

  <Style x:Key="HomeGroupLabelStyle" TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="Fira Sans OT" />
    <Setter Property="FontWeight" Value="Light" />
    <Setter Property="FontSize"   Value="{ThemeResource BigFontSize}" />
  </Style>

  <Style x:Key="ListViewLabelStyle" TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="Fira Sans OT" />
    <Setter Property="FontSize"   Value="28" />
  </Style>

  <Style x:Key="ListViewSmallLabelStyle" TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="Fira Sans OT" />
    <Setter Property="FontSize"   Value="22" />
  </Style>

  <Style x:Key="DetailHeaderLabelStyle" TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="Fira Sans OT" />
    <Setter Property="FontSize"   Value="30" />
  </Style>

  <Style x:Key="DetailLabelStyle" TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="Fira Sans OT" />
    <Setter Property="FontWeight" Value="Light" />
    <Setter Property="FontSize"   Value="27" />
  </Style>

</ResourceDictionary>
